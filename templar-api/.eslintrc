{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "project": "tsconfig.json",
        "sourceType": "module",
        "createDefaultProgram": true
    },
    "ignorePatterns": ["./dist/src/admins.js"],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "@typescript-eslint/no-unused-vars": "warn"
    }
}